      "source": [
        "# 上辺の長さをcmで指定\n",
        "top = 10\n",
        "\n",
        "# 下辺の長さをcmで指定\n",
        "bottom = 20\n",
        "\n",
        "# 高さをcmで指定\n",
        "height = 5\n",
        "\n",
        "# 台形の面積の公式を使って計算\n",
        "# （上辺 + 下辺）× 高さ ÷ 2\n",
        "area = (top + bottom) * height / 2\n",
        "\n",
        "# f文字列を使って、計算結果と単位を一緒に表示\n",
        "print(f\"{area}cm²\")\n"
      ]
